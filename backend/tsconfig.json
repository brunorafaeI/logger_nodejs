{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@common/*": ["common/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
    },
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules", 
    "src/infra/database/prisma"
  ]
}
